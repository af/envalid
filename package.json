{
  "name": "envalid",
  "version": "8.1.0-beta.1",
  "description": "Validation for your environment variables",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=8.12"
  },
  "engineStrict": true,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "check-exports": "attw --pack .",
    "start": "tsc --watch",
    "prepare": "tsc",
    "coverage": "jest --coverage",
    "lint": "tsc && biome lint --diagnostic-level=error src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/af/envalid"
  },
  "keywords": [
    ".env",
    "dotenv",
    "env",
    "env var",
    "environment",
    "environment variable",
    "validation"
  ],
  "dependencies": {
    "tslib": "2.6.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.15.4",
    "@biomejs/biome": "1.9.3",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.5",
    "expect-type": "^0.19.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.2.2"
  },
  "author": "Aaron Franks",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
