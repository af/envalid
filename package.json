{
  "name": "envalid",
  "version": "4.1.3",
  "description": "Validation for your environment variables",
  "main": "index.js",
  "files": [
    "index.js",
    "envalid.d.ts",
    "lib/"
  ],
  "engines": {
    "node": ">=6"
  },
  "engineStrict": true,
  "scripts": {
    "lint": "eslint . --ignore-pattern '!.eslintrc.js'",
    "lint-ts": "npm run prettier-ts -- --list-different",
    "test": "painless -r spec tests/*.js",
    "prettier-ts": "prettier envalid.d.ts --tab-width 4 --print-width 100 --single-quote --no-semi",
    "coverage": "nyc npm test",
    "precommit": "lint-staged",
    "prepush": "npm run lint && npm run lint-ts && npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/af/envalid"
  },
  "keywords": [
    ".env",
    "dotenv",
    "env",
    "env var",
    "environment",
    "environment variable",
    "validation"
  ],
  "devDependencies": {
    "eslint": "4.5.0",
    "eslint-plugin-prettier": "2.2.0",
    "husky": "0.14.3",
    "is-promise": "2.1.0",
    "lint-staged": "4.0.4",
    "nyc": "11.1.0",
    "painless": "0.9.5",
    "prettier": "1.5.3",
    "typescript": "2.4.2",
    "typescript-definition-tester": "0.0.5"
  },
  "author": "Aaron Franks",
  "license": "MIT",
  "dependencies": {
    "chalk": "2.1.0",
    "dotenv": "4.0.0",
    "meant": "1.0.0",
    "validator": "9.4.1"
  },
  "typings": "envalid.d.ts",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "npm run prettier-ts -- --write",
      "git add"
    ]
  }
}
