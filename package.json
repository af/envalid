{
  "name": "envalid",
  "version": "7.3.1",
  "description": "Validation for your environment variables",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=8.12"
  },
  "engineStrict": true,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "tsc --watch",
    "prepare": "tsc",
    "coverage": "jest --coverage",
    "lint": "tsc && prettier --list-different --write src tests",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/af/envalid"
  },
  "keywords": [
    ".env",
    "dotenv",
    "env",
    "env var",
    "environment",
    "environment variable",
    "validation"
  ],
  "dependencies": {
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/jest": "28.1.8",
    "@types/node": "17.0.21",
    "husky": "7.0.4",
    "jest": "28.1.3",
    "prettier": "2.5.1",
    "ts-jest": "28.0.8",
    "typescript": "4.6.2"
  },
  "author": "Aaron Franks",
  "license": "MIT",
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
