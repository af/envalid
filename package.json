{
  "name": "envalid",
  "version": "7.2.1",
  "description": "Validation for your environment variables",
  "main": "dist/index.js",
  "module": "dist/envalid.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=8.12"
  },
  "engineStrict": true,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prepare": "tsc",
    "coverage": "jest --coverage",
    "lint": "tsc && prettier -list-different --write src tests",
    "test": "jest -i"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/af/envalid"
  },
  "keywords": [
    ".env",
    "dotenv",
    "env",
    "env var",
    "environment",
    "environment variable",
    "validation"
  ],
  "dependencies": {
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/node": "16.4.0",
    "husky": "4.3.6",
    "jest": "27.3.0",
    "prettier": "2.3.2",
    "ts-jest": "27.0.7",
    "typescript": "4.3.5"
  },
  "author": "Aaron Franks",
  "license": "MIT",
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn test"
    }
  }
}
